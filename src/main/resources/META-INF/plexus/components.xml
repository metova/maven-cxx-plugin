<component-set>
	<components>

		<component>
			<role-hint>default</role-hint>
			<role>org.hardisonbrewing.maven.cxx.component.ProjectConfigurationFactory</role>
			<implementation>org.hardisonbrewing.maven.cxx.component.DefaultProjectConfigurationFactory</implementation>
		</component>
		<component>
			<role-hint>default</role-hint>
			<role>org.hardisonbrewing.maven.cxx.component.BuildConfiguration</role>
			<implementation>org.hardisonbrewing.maven.cxx.component.DefaultBuildConfiguration</implementation>
			<configuration>
				<sourceDirectory>src</sourceDirectory>
			</configuration>
		</component>
		
		<!--
			CDT (Eclipse CDT Project, BlackBerry QNX)
		-->
		<component>
			<role-hint>cdt</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>clean</id>
						<phases>
							<pre-clean>org.metova:maven-metova-cxx-plugin:cdt-pre-clean</pre-clean>
							<clean>org.apache.maven.plugins:maven-clean-plugin:clean,
								org.metova:maven-metova-cxx-plugin:cdt-managed-clean,
								org.metova:maven-metova-cxx-plugin:cdt-qcc-makefile-clean</clean>
						</phases>
					</lifecycle>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.metova:maven-metova-cxx-plugin:validate,
								org.metova:maven-metova-cxx-plugin:cdt-validate,
								org.metova:maven-metova-cxx-plugin:cdt-qcc-managed-validate</validate>
							<initialize>org.metova:maven-metova-cxx-plugin:initialize,
								org.metova:maven-metova-cxx-plugin:cdt-initialize,
								org.metova:maven-metova-cxx-plugin:cdt-managed-initialize,
								org.metova:maven-metova-cxx-plugin:cdt-qcc-initialize</initialize>
							<generate-sources>org.metova:maven-metova-cxx-plugin:dependency-copy</generate-sources>
							<compile>org.metova:maven-metova-cxx-plugin:cdt-gnu-managed-compile,
								org.metova:maven-metova-cxx-plugin:cdt-qcc-makefile-compile,
								org.metova:maven-metova-cxx-plugin:cdt-qcc-managed-compile,
								org.metova:maven-metova-cxx-plugin:cdt-qcc-managed-assemble,
								org.metova:maven-metova-cxx-plugin:cdt-qcc-managed-link,
								org.metova:maven-metova-cxx-plugin:qnx-bar-compile</compile>
							<prepare-package>org.metova:maven-metova-cxx-plugin:cdt-prepare-package</prepare-package>
							<package>org.metova:maven-metova-cxx-plugin:package</package>
							<install>org.apache.maven.plugins:maven-install-plugin:install</install>
							<deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>cdt</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>zip</extension>
				<packaging>cdt</packaging>
				<type>cdt</type>
			</configuration>
		</component>
		
		<!--
			FLEX (ADOBE AIR)
		-->
		<component>
			<role-hint>flex</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.metova:maven-metova-cxx-plugin:validate,
								org.metova:maven-metova-cxx-plugin:flex-validate</validate>
							<initialize>org.metova:maven-metova-cxx-plugin:initialize,
								org.metova:maven-metova-cxx-plugin:flex-initialize</initialize>
							<generate-sources>org.metova:maven-metova-cxx-plugin:dependency-copy,
								org.metova:maven-metova-cxx-plugin:generate-sources</generate-sources>
							<process-sources>org.metova:maven-metova-cxx-plugin:process-sources</process-sources>
							<generate-resources>org.metova:maven-metova-cxx-plugin:generate-resources,
								org.metova:maven-metova-cxx-plugin:flex-generate-resources</generate-resources>
							<process-resources>org.metova:maven-metova-cxx-plugin:process-resources</process-resources>
							<compile>org.metova:maven-metova-cxx-plugin:flex-swc-compile,
								org.metova:maven-metova-cxx-plugin:flex-compile,
								org.metova:maven-metova-cxx-plugin:flex-airi-compile,
								org.metova:maven-metova-cxx-plugin:flex-air-compile</compile>
							<prepare-package>org.metova:maven-metova-cxx-plugin:flex-prepare-package</prepare-package>
							<package>org.metova:maven-metova-cxx-plugin:package</package>
							<install>org.apache.maven.plugins:maven-install-plugin:install</install>
							<deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>flex</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>zip</extension>
				<packaging>flex</packaging>
				<type>flex</type>
			</configuration>
		</component>
		
		
		<!--
			MSBUILD (Windows Phone)
		-->
		<component>
			<role-hint>msbuild</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.metova:maven-metova-cxx-plugin:validate,
								org.metova:maven-metova-cxx-plugin:msbuild-validate</validate>
							<initialize>org.metova:maven-metova-cxx-plugin:initialize,
								org.metova:maven-metova-cxx-plugin:msbuild-initialize</initialize>
							<generate-sources>org.metova:maven-metova-cxx-plugin:dependency-copy</generate-sources>
							<process-sources>org.metova:maven-metova-cxx-plugin:msbuild-assembly-info</process-sources>
							<compile>org.metova:maven-metova-cxx-plugin:msbuild-compile,
								org.metova:maven-metova-cxx-plugin:msbuild-generate-build-settings,
								org.metova:maven-metova-cxx-plugin:msbuild-revert-assembly-info</compile>
							<test>org.metova:maven-metova-cxx-plugin:msbuild-test</test>
							<package>org.metova:maven-metova-cxx-plugin:msbuild-package</package>
							<install>org.apache.maven.plugins:maven-install-plugin:install</install>
							<deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>msbuild</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<packaging>msbuild</packaging>
				<type>msbuild</type>
			</configuration>
		</component>
		
		<!--
			.QNX (Makefile, BlackBerry QNX)
		-->
		<component>
			<role-hint>qnx</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>clean</id>
						<phases>
							<clean>org.apache.maven.plugins:maven-clean-plugin:clean,
								org.metova:maven-metova-cxx-plugin:qnx-clean</clean>
						</phases>
					</lifecycle>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.metova:maven-metova-cxx-plugin:validate</validate>
							<initialize>org.metova:maven-metova-cxx-plugin:initialize,
								org.metova:maven-metova-cxx-plugin:qnx-initialize</initialize>
							<generate-sources>org.metova:maven-metova-cxx-plugin:dependency-copy</generate-sources>
							<compile>org.metova:maven-metova-cxx-plugin:qnx-compile,
								org.metova:maven-metova-cxx-plugin:qnx-bar-compile</compile>
							<prepare-package>org.metova:maven-metova-cxx-plugin:qnx-prepare-package</prepare-package>
							<package>org.metova:maven-metova-cxx-plugin:package</package>
							<install>org.apache.maven.plugins:maven-install-plugin:install</install>
							<deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>qnx</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>zip</extension>
				<packaging>qnx</packaging>
				<type>qnx</type>
			</configuration>
		</component>
		
		<!--
			XCODE
		-->
		<component>
			<role-hint>xcode</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.metova:maven-metova-cxx-plugin:validate,
								org.metova:maven-metova-cxx-plugin:xcode-validate</validate>
							<initialize>org.metova:maven-metova-cxx-plugin:initialize,
								org.metova:maven-metova-cxx-plugin:xcode-initialize,
								org.metova:maven-metova-cxx-plugin:xcode-convert-pbxproj,
								org.metova:maven-metova-cxx-plugin:xcode-convert-xcscheme</initialize>
							<generate-sources>org.metova:maven-metova-cxx-plugin:dependency-copy</generate-sources>
							<generate-resources>org.metova:maven-metova-cxx-plugin:xcode-install-provisioning-profile,
								org.metova:maven-metova-cxx-plugin:xcode-unlock-keychain,
								org.metova:maven-metova-cxx-plugin:xcode-install-codesign-certificate</generate-resources>
							<compile>org.metova:maven-metova-cxx-plugin:xcode-start-simulator,
								org.metova:maven-metova-cxx-plugin:xcode-compile,
								org.metova:maven-metova-cxx-plugin:xcode-compile-scheme,
								org.metova:maven-metova-cxx-plugin:xcode-stop-simulator,
								org.metova:maven-metova-cxx-plugin:xcode-convert-plist,
								org.metova:maven-metova-cxx-plugin:xcode-ipa-manifest</compile>
							<prepare-package>org.metova:maven-metova-cxx-plugin:xcode-generate-ipa,
								org.metova:maven-metova-cxx-plugin:xcode-prepare-package</prepare-package>
							<package>org.metova:maven-metova-cxx-plugin:package</package>
							<install>org.apache.maven.plugins:maven-install-plugin:install</install>
							<deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>xcode</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>zip</extension>
				<packaging>xcode</packaging>
				<type>xcode</type>
			</configuration>
		</component>
	</components>
</component-set>
